<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weather.App.Views.WeatherPresentation"
             xmlns:chart="clr-namespace:Syncfusion.SfChart.XForms;assembly=Syncfusion.SfChart.XForms">
    <ContentPage.Content>
        <StackLayout>

            <chart:SfChart x:Name="Chart" 
                           HorizontalOptions="FillAndExpand" 
                           VerticalOptions="FillAndExpand"
                           Margin="20">
                <chart:SfChart.PrimaryAxis>

                    <chart:CategoryAxis>
                        <chart:CategoryAxis.Title>

                            <chart:ChartAxisTitle Text="Test"></chart:ChartAxisTitle>

                        </chart:CategoryAxis.Title>
                    </chart:CategoryAxis>

                </chart:SfChart.PrimaryAxis>

                <chart:SfChart.SecondaryAxis>

                    <chart:NumericalAxis>

                    </chart:NumericalAxis>

                </chart:SfChart.SecondaryAxis>
                
                <chart:SfChart.Series>

                    <chart:ColumnSeries 
                        ItemsSource="{Binding DailyForecastDtos}" 
                        XBindingPath="Datetime" 
                        YBindingPath="{Binding YBindingPath}"
                        EnableAnimation="True"
                        EnableTooltip="True">

                    </chart:ColumnSeries>

                </chart:SfChart.Series>

            </chart:SfChart>
            <Label Text="dupa"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>